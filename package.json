{
  "name": "eggroll-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:user-api": "nest build user-api",
    "user-api:local": "dotenv -e .env.local -- nest start user-api --watch",
    "user-api:dev": "npm run dev -- node dist/apps/user-api/src/main",
    "build:manager-api": "nest build manager-api",
    "manager-api:local": "dotenv -e .env.local -- nest start manager-api --watch",
    "manager-api:dev": "npm run dev -- node dist/apps/manager-api/src/main",
    "build:all": "npm run build:user-api && npm run build:manager-api",
    "format": "prettier --write \"**/src/**/*.ts\"",
    "local": "NODE_ENV=local dotenv -e .env.local",
    "dev": "NODE_ENV=development dotenv -e .env.development",
    "prod": "NODE_ENV=production dotenv -e .env.production",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "tester": "NODE_ENV=local dotenv -e .env.local -- nest start tester --watch",
    "encode": "base64 -i .env.development > .env.development.base64 && base64 -i .env.local > .env.local.base64"
  },
  "dependencies": {
    "@faker-js/faker": "^9.7.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/typeorm": "^11.0.0",
    "@toss/nestjs-aop": "^2.1.6",
    "@types/lodash": "^4.17.16",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "builder-pattern": "^2.2.0",
    "cheerio": "^1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dayjs": "^1.11.13",
    "dotenv-cli": "^8.0.0",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "mysql2": "^3.14.0",
    "passport-custom": "^1.1.1",
    "qs": "^6.14.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.21",
    "typeorm-transactional": "^0.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.4",
    "jest": "^29.5.0",
    "prettier": "3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
