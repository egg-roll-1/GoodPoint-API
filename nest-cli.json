{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": ".",
  "generateOptions": {
    "spec": false
  },
  "projects": {
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json",
        "plugins": [
          {
            "name": "@nestjs/swagger",
            "options": { "introspectComments": true }
          }
        ]
      }
    },
    "user-api": {
      "type": "application",
      "root": "apps/user-api",
      "entryFile": "main",
      "sourceRoot": "apps/user-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-api/tsconfig.app.json",
        "plugins": [
          {
            "name": "@nestjs/swagger",
            "options": { "introspectComments": true }
          }
        ]
      }
    },
    "admin-api": {
      "type": "application",
      "root": "apps/admin-api",
      "entryFile": "main",
      "sourceRoot": "apps/admin-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/admin-api/tsconfig.app.json",
        "plugins": [
          {
            "name": "@nestjs/swagger",
            "options": { "introspectComments": true }
          }
        ]
      }
    }
  }
}
